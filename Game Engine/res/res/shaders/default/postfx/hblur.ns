$VERSION
150 core
$END

$VS
in vec3 inPosition;
in vec2 inTexCoords;

uniform mat4 viewMatrix;
uniform float radius;

out vec2 texCoord[11];

void main() {
	gl_Position = vec4(inPosition, 1);
	for (int i = -5; i <= 5; i++) {
		texCoord[i + 5] = clamp(inTexCoords + vec2(i * radius / 5, 0), 0, 1);
	}
}
$END

$FS
#include <blur.nfs>
$END
